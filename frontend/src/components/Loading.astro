---
import { Image } from "astro:assets";
import loader from "../assets/pokemon.png";
---

<div
  id="loading-overlay"
  class="fixed top-0 left-0 w-full h-full flex flex-col justify-center items-center bg-black bg-opacity-100 z-50"
>
  <Image src={loader} class="w-32 h-32 animate-spin" alt="Loading" />
  <h1 class="text-2xl text-white">
    Loading <span id="dots" class="text-white text-xl">ðŸ”¥</span>
  </h1>
  <script>
    // Esperar a que se cargue todo el contenido de la pÃ¡gina
    document.addEventListener("DOMContentLoaded", function () {
      const loadingOverlay = document.getElementById("loading-overlay");

      function hideLoadingOverlay() {
        loadingOverlay.classList.add("hidden");
      }

      window.onload = () => {
        setTimeout(hideLoadingOverlay, 500);
      };
    });
  </script>
</div>
